{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

{% if utilisateur.id == app.user.id or is_granted('ROLE_ADMIN') %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ utilisateur.telephone }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ utilisateur.langue }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Modifier votre compte</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% else %}
    <p> Vous n'avez pas accès à cette page, veuillez retourner à l'accueil </p>
{% endif %}

{% endblock %}
