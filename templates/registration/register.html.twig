{% extends 'base.html.twig' %}

{% block title %}So'SerenityHome | {% trans %}Inscription{% endtrans %}{% endblock %}


{% block body %}
<div class="bg-montagne">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <form method="post">
        <div class="container">
            <h1 class="mb-4 text-bluelight bold-600">{% trans %}Inscription{% endtrans %}</h1>
            {{ form_start(registrationForm) }}
            <div class="gras text-bluelight">
            {{ form_row(registrationForm.langue) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.telephone) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            
            <button type="submit" class="button-yellow">{% trans %}S'inscrire{% endtrans %}</button>
            {{ form_end(registrationForm) }}
        </div>
    </form>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>
{% endblock %}
