{% extends 'base.html.twig' %}

{% block title %}So'SerenityHome | Inscription{% endblock %}


{% block body %}
<div class="bg-montagne">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <form method="post">
        <div class="container">
            <h1 class="mb-4 text-bluelight bold-600">Inscription</h1>
            <div class="gras text-bluelight">
            {{ form_start(registrationForm) }}
            </div>
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.telephone) }}
            {{ form_row(registrationForm.langue) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="button-yellow">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </form>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>
{% endblock %}
