{% extends 'base.html.twig' %}

{% block title %}So'SerenityHome | {% trans %}Connexion{% endtrans %}{% endblock %}

{% block body %}

<div class="bg-montagne">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <form method="post">
        <div class="container">
            <h1 class="mb-4 text-bluelight bold-600">{% trans %}Connexion{% endtrans %}</h1>
            <label  class="gras text-bluelight" for="inputEmail">{% trans %}Adresse email{% endtrans %}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Entrez l'email" class="form-control mb-3" autocomplete="email" required autofocus>
            <label class="gras text-bluelight" Connexion for="inputPassword">{% trans %}Mot de passe{% endtrans %}</label>
            <input type="password" name="password" id="inputPassword" placeholder="Entrez le mot de passe" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="button-yellow mt-5" type="submit">{% trans %}Se connecter{% endtrans %}</button>
            {% if error %}
                <div class="alert alert-danger">{% trans %}Email ou mot de passe incorrect{% endtrans %}</div>
            {% endif %}
        </div>
    </form>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>
{% endblock %}
